        <div class="editor-label">
            @Html.Raw( "GPS Driver" )
        </div>
        <div class="editor-field">
            @Html.TextBox( "txtGPS_Driver", ( null != Model ) ?
                Model.Test_Config.Driver_Config.GPS_Driver : string.Empty, new { @runat="server" } )
        </div>
        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
